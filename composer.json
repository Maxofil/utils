{
  "name": "infinityloop-dev/utils",
  "description": "Common utils for infinityloop packages.",
  "homepage": "https://www.infinityloop.dev/",
  "type": "library",
  "license": ["MIT"],
  "authors": [
    {
      "name": "Václav Pelíšek",
      "homepage": "https://www.peldax.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "nette/utils": "^3.0"
  },
  "scripts": {
    "phpunit": "phpunit tests",
    "phpunit-html": "phpunit --coverage-html build --whitelist src tests"
  },
  "autoload": {
    "psr-4": {
      "Infinityloop\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Infinityloop\\Tests\\": "tests/"
    }
  }
}
